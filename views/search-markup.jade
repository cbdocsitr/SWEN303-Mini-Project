extends ../node_modules/jade-bootstrap/_bootstrap

block body
	+navbar("Colenso Database", "dropdown_menu", "inverse")
		+nav_item("/") Home 
		+nav_item_dropdown("#")(label="Search")
			+nav_item("/search-text") Search by Text
			+nav_item("/search-markup") Search by Markup
		+nav_item_dropdown("#")(label="Browse the Collection")
			+nav_item("/browse") Browse by Correspondents
	.container
		h3 Search by Text
		form(action="/search-markup", method="get")
			input(type="text", name="searchString")
			input(type="submit")
			if(visited)
				br
				div #{number} Results
				ul
					each val, index in results
						li 
							a(href = "#{val.href}") !{val.title}